generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Refund {
  id                     String   @id @default(uuid())
  name                   String
  email                  String
  address                String
  city                   String
  state                  String
  zip                    String
  phone                  String
  bankName               String
  isUsingInternetBanking Boolean
  dob                    DateTime
  amount                 Float
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
}
